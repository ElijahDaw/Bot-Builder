#!/bin/bash
set -e
THIS_DIR="$(cd "$(dirname "$0")" && pwd)"
BIN="$THIS_DIR/VocabBot"

# Open Terminal and execute the binary from inside the bundle
/usr/bin/osascript <<EOF
tell application "Terminal"
  activate
  do script "cd $(printf %q "$THIS_DIR"); ./$(printf %q "$(basename "$BIN")")"
end tell
EOF
